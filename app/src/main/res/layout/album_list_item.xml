<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView 
	        android:id="@+id/item_albumArt"
	        android:layout_width="55dp"
		    android:layout_height="55dp"
		    android:scaleType="centerCrop"
		    android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_album"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:singleLine="true"
	        android:layout_toRightOf="@id/item_albumArt"
	        android:textSize="18dp"
	        android:layout_marginLeft="5dp"
	        android:gravity="center_vertical"
	        android:ellipsize="marquee"/>
        <TextView
            android:id="@+id/itme_albumArtist"
	        android:layout_width="wrap_content"
	        android:layout_height="15dp"
	        android:singleLine="true"
	        android:textSize="12dp"
	        android:layout_marginLeft="5dp"
	        android:gravity="center_vertical"
	        android:layout_toRightOf="@id/item_albumArt"
	        android:layout_below="@id/item_album"/>
        <TextView
            android:id="@+id/itme_album_NumOfSongs"
	        android:layout_width="wrap_content"
	        android:layout_height="15dp"
	        android:singleLine="true"
	        android:textSize="10dp"
	        android:layout_marginLeft="5dp"
	        android:gravity="center_vertical"
	        android:layout_toRightOf="@id/item_albumArt"
	        android:layout_below="@id/itme_albumArtist"/>
	        
    

</RelativeLayout>