<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp" 
    android:gravity="center">
    <!-- not to use ImageButton, it will override the click listener of gridView -->
    <ImageView 
        android:id="@+id/gridItem_Image"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView 
        android:id="@+id/gridItem_name"
        android:layout_below="@id/gridItem_Image"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:gravity="center"/>
    <TextView 
        android:id="@+id/gridItem_num"
        android:layout_below="@id/gridItem_name"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:gravity="center"/>

</RelativeLayout>