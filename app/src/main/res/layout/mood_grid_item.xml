<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp" 
    android:gravity="center">
    <!-- not to use ImageButton, it will override the click listener of gridView -->
    <ImageView 
        android:id="@+id/mood_item_image"
        android:layout_width="120dp"
	    android:layout_height="80dp"
	    android:scaleType="fitXY"/>
    <TextView 
        android:id="@+id/mood_item_type"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_below="@id/mood_item_image"
        android:textSize="18dp"
        android:gravity="center"/>
    <TextView 
        android:id="@+id/mood_item_numOfSongs"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:textSize="12dp"
        android:layout_below="@id/mood_item_type"
        android:gravity="center"/>

</RelativeLayout>